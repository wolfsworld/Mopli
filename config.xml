<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.phonegap.mopli"
        versionCode = "33" 
        version     = "1.3.1" >

    <name>MOPLI JTPL</name>
    <description>
        Mobile Public Library Information App for Jefferson Township Public Library
    </description>
    <author email="info@mopli.net" href="http://mopli.net">
        PhoneGap Team
    </author>
    
    <access origin="*" />
    <allow-navigation href="*" />
    <platform name="android">
    <preference name="android-minSdkVersion" value="15" />
    <preference name="android-targetSdkVersion" value="24" />
	</platform>

    <gap:plugin name="cordova-plugin-whitelist" source="npm" />
	<plugin name="phonegap-plugin-barcodescanner"/>
	<preference name="android-build-tool" value="gradle" />
	<gap:config-file platform="ios" parent="NSCameraUsageDescription" overwrite="true">
   	<string>We are using the Camera for scanning</string>
	</gap:config-file>
	<gap:config-file platform="ios" parent="NSPhotoLibraryUsageDescription" overwrite="true">
   	<string>For uploading receipt images</string>
	</gap:config-file>
   <preference name="permissions" value="none"/>
   	<gap:plugin name="cordova-plugin-camera" source="npm"  />
	<gap:plugin name="cordova-plugin-device"  source="npm" />
	<gap:plugin name="cordova-plugin-network-information" source="npm" />
	<gap:plugin name="cordova-plugin-statusbar" source="npm"/>
		<feature name="StatusBar">
	 		<param name="ios-package" value="CDVStatusBar" onload="true" />
	 	</feature>
		<preference name="StatusBarOverlaysWebView" value="false" />
		<preference name="StatusBarBackgroundColor" value="#f6a90d" />
	<gap:plugin name="cordova-plugin-spinnerdialog" source="npm"/>
	<gap:plugin name="cordova-plugin-flashlight" source="npm"/>
	<gap:plugin name="cordova-plugin-splashscreen" source="npm" />
	<gap:plugin name="cordova-plugin-inappbrowser" spec="~1.7.0" source="npm" />
	<preference name="phonegap-version" value="cli-7.1.0" />
	<preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="false" />
	<preference name="AutoHideSplashScreen" value="false" />
	<preference name="SplashScreenDelay" value="5000" />
	<preference name="EnableViewportScale" value="true"/>
	
	
	<splash src="splash.png" />
	
    <platform name="ios"><icon src="icon/ios/icon1024.png" width="1024" height="1024" /></platform>
    <platform name="android"><icon src="icon.png" /></platform>

    <icon src="res/icon/android/icon-36-ldpi.png" qualifier="ldpi" platform="android" />
    <icon src="res/icon/android/icon-48-mdpi.png" qualifier="mdpi" platform="android" />
    <icon src="res/icon/android/icon-72-hdpi.png" qualifier="hdpi" platform="android" />
    <icon src="res/icon/android/icon-96-xhdpi.png" qualifier="xhdpi" platform="android" />
    <icon src="res/icon/blackberry/icon-80.png" qualifier="blackberry" />
    <icon src="res/icon/blackberry/icon-80.png" qualifier="blackberry" gap:state="hover" />
    <icon src="res/icon/ios/icon-57.png" width="57" qualifier="ios" height="57" />
	<icon src="res/icon/ios/icon-58.png" width="58" qualifier="ios" height="58" />
	<icon src="res/icon/ios/icon-72.png" width="72" qualifier="ios" height="72" />
	<icon src="res/icon/ios/icon-76.png" width="76" qualifier="ios" height="76" />
    <icon src="res/icon/ios/icon-80.png" width="80" qualifier="ios" height="80" />
    <icon src="res/icon/ios/icon-60-2x.png" width="120" qualifier="ios" height="120" />
	<icon src="res/icon/ios/icon-120.png" width="120" qualifier="ios" height="120" />
	<icon src="res/icon/ios/icon-58-2x.png" width="116" qualifier="ios" height="114" />
	<icon src="res/icon/ios/icon-76-2x.png" width="152" qualifier="ios" height="152" />
    <icon src="res/icon/ios/icon-80-2x.png" width="160" qualifier="ios" height="144" />
    <icon src="res/icon/ios/icon-152.png" width="152" qualifier="ios" height="152" />
    <icon src="res/icon/webos/icon-64.png" qualifier="webos" />
    <icon src="res/icon/windows-phone/icon-48.png" qualifier="winphone" />
    <icon src="res/icon/windows-phone/icon-173.png" qualifier="winphone" gap:role="background" />
    


	<splash src="res/screen/android/screen-ldpi-portrait.png" platform="android" density="port-ldpi"  />
	<splash src="res/screen/android/screen-mdpi-portrait.png" platform="android" density="port-mdpi" />
    <splash src="res/screen/android/screen-hdpi-portrait.png" platform="android" density="port-hdpi" />
    <splash src="res/screen/android/screen-xhdpi-portrait.png" platform="android" density="port-xhdpi" />


    <splash src="res/screen/ios/screen-iphone-portrait.png" platform="ios" height="480"  width="320" />
    <splash src="res/screen/ios/screen-iphone-portrait-2x.png" platform="ios" height="960"  width="640" />
	<splash src="res/screen/ios/screen-iphone-portrait-568h-2x.png" platform="ios" height="1136"  width="640" />
    <splash src="res/screen/ios/screen-ipad-portrait.png" platform="ios" height="1024"  width="768" />
    <splash src="res/screen/ios/screen-ipad-landscape.png" platform="ios" height="768"  width="1024" />
	<splash src="res/screen/ios/screen-ipad-portrait-2x.png" platform="ios" height="2048"  width="1536" />
    <splash src="res/screen/ios/screen-ipad-landscape-2x.png" platform="ios" height="1536"  width="2048" />
    <splash src="res/screen/ios/Splash-640x980.png" platform="ios" height="980"  width="640" />
	<splash src="res/screen/ios/Splash-750x1334.png" platform="ios" height="1334"  width="750" />
    <splash src="res/screen/ios/Splash-2208x1242.png" platform="ios" height="2208"  width="1242" />
    <splash src="res/screen/ios/Splash-1242x2208.png" platform="ios" height="1242"  width="2208" />

	
	<gap:splash platform="winphone" src="res/screen/windows-phone/screen-portrait.jpg" />
	<engine name="android" spec="^4.0.2" />
    <engine name="ios" spec="^3.8.0" />
</widget>
