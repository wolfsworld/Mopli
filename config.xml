<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.mopli" version="1.4.3" versionCode="3" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>MOPLI JTPL</name>
    <description>
        Mobile Public Library Information App for Jefferson Township Public Library
    </description>
    <author email="info@mopli.net" href="http://mopli.net">
        Mopli Team
    </author>
    <access origin="*" />
    <allow-navigation href="*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="15" />
        <preference name="android-targetSdkVersion" value="28" />
    </platform>
    <gap:plugin name="cordova-plugin-whitelist" source="npm" />
    <plugin name="cordova-plugin-barcodescanner" />
    <preference name="android-build-tool" value="gradle" />
    <edit-config file="*-Info.plist" mode="merge" target="NSCameraUsageDescription">
        <string>The app needs access to the camera, to be able to read barcodes.</string>
    </edit-config>
    <edit-config file="*-Info.plist" mode="merge" target="NSPhotoLibraryUsageDescription">
        <string>App needs for using scan results.</string>
    </edit-config>
    <preference name="permissions" value="none" />
    <gap:plugin name="cordova-plugin-camera" source="npm" />
    <gap:plugin name="cordova-plugin-device" source="npm" />
    <gap:plugin name="cordova-plugin-network-information" source="npm" />
    <gap:plugin name="cordova-plugin-statusbar" source="npm" />
    <feature name="StatusBar">
        <param name="ios-package" onload="true" value="CDVStatusBar" />
    </feature>
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#f6a90d" />
    <gap:plugin name="cordova-plugin-spinnerdialog" source="npm" />
    <gap:plugin name="cordova-plugin-flashlight" source="npm" />
    <gap:plugin name="cordova-plugin-splashscreen" source="npm" />
    <gap:plugin name="cordova-plugin-inappbrowser" source="npm" spec="~1.7.0" />
    <preference name="phonegap-version" value="cli-7.1.0" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="false" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="EnableViewportScale" value="true" />
    <splash src="splash.png" />
    <platform name="ios">
        <icon height="1024" src="res/icon/ios/icon1024.png" width="1024" />
        <icon height="57" src="res/icon/ios/icon-57.png" width="57" />
        <icon height="58" src="res/icon/ios/icon-58.png" width="58" />
        <icon height="72" src="res/icon/ios/icon-72.png" width="72" />
        <icon height="76" src="res/icon/ios/icon-76.png" width="76" />
        <icon height="80" src="res/icon/ios/icon-80.png" width="80" />
        <icon height="120" src="res/icon/ios/icon-60-2x.png" width="120" />
        <icon height="120" src="res/icon/ios/icon-120.png" width="120" />
        <icon height="114" src="res/icon/ios/icon-58-2x.png" width="116" />
        <icon height="152" src="res/icon/ios/icon-76-2x.png" width="152" />
        <icon height="144" src="res/icon/ios/icon-80-2x.png" width="160" />
        <icon height="152" src="res/icon/ios/icon-152.png" width="152" />
        <splash height="480" src="res/screen/ios/screen-iphone-portrait.png" width="320" />
        <splash height="960" src="res/screen/ios/screen-iphone-portrait-2x.png" width="640" />
        <splash height="1136" src="res/screen/ios/screen-iphone-portrait-568h-2x.png" width="640" />
        <splash height="1024" src="res/screen/ios/screen-ipad-portrait.png" width="768" />
        <splash height="768" src="res/screen/ios/screen-ipad-landscape.png" width="1024" />
        <splash height="2048" src="res/screen/ios/screen-ipad-portrait-2x.png" width="1536" />
        <splash height="1536" src="res/screen/ios/screen-ipad-landscape-2x.png" width="2048" />
        <splash height="980" src="res/screen/ios/Splash-640x980.png" width="640" />
        <splash height="1334" src="res/screen/ios/Splash-750x1334.png" width="750" />
        <splash height="2208" src="res/screen/ios/Splash-2208x1242.png" width="1242" />
        <splash height="1242" src="res/screen/ios/Splash-1242x2208.png" width="2208" />
    </platform>
    <platform name="android">
        <icon src="icon.png" />
        <icon density="ldpi" src="res/icon/android/icon-36-ldpi.png" />
        <icon density="mdpi" src="res/icon/android/icon-48-mdpi.png" />
        <icon density="hdpi" src="res/icon/android/icon-72-hdpi.png" />
        <icon density="xhdpi" src="res/icon/android/icon-96-xhdpi.png" />
        <splash density="port-ldpi" platform="android" src="res/screen/android/screen-ldpi-portrait.png" />
        <splash density="port-mdpi" platform="android" src="res/screen/android/screen-mdpi-portrait.png" />
        <splash density="port-hdpi" platform="android" src="res/screen/android/screen-hdpi-portrait.png" />
        <splash density="port-xhdpi" platform="android" src="res/screen/android/screen-xhdpi-portrait.png" />
        <splash density="land-ldpi" platform="android" src="res/screen/android/screen-ldpi-landscape.png" />
        <splash density="land-mdpi" platform="android" src="res/screen/android/screen-mdpi-landscape.png" />
        <splash density="land-hdpi" platform="android" src="res/screen/android/screen-hdpi-landscape.png" />
        <splash density="land-xhdpi" platform="android" src="res/screen/android/screen-xhdpi-landscape.png" />
    </platform>
    <gap:splash platform="winphone" src="res/screen/windows-phone/screen-portrait.jpg" />
    <engine name="android" spec="^4.0.2" />
</widget>
